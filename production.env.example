# Production Environment Configuration
NODE_ENV=production

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/beauty_crafter_prod
REDIS_URL=redis://localhost:6379

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here-256-bits
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-here-256-bits
ENCRYPTION_MASTER_KEY=your-256-bit-encryption-master-key-here

# NextAuth Configuration
NEXTAUTH_SECRET=your-nextauth-secret-key-here
NEXTAUTH_URL=https://your-domain.com

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Payment Configuration
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Communication Services
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# AI Services
OPENAI_SECRET_KEY=sk-your-openai-secret-key

# Email Services
RESEND_API_KEY=re_your-resend-api-key
FROM_EMAIL=noreply@your-domain.com

# Monitoring and Logging
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_LEVEL=info
LOGGING_WEBHOOK_URL=https://your-logging-webhook-url

# Backup Configuration
BACKUP_DIR=/var/backups/beauty-crafter
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION=true
BACKUP_COMPRESSION=true
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1

# Security Headers
CSP_ENABLED=true
HSTS_ENABLED=true
XSS_PROTECTION=true
CSRF_ENABLED=true
RATE_LIMIT_ENABLED=true
MAX_REQUEST_SIZE=10485760

# API Configuration
API_VERSION=v2
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
ALERT_EMAIL=alerts@your-domain.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook

# CDN Configuration
CDN_URL=https://cdn.your-domain.com
CDN_ENABLED=true

# Feature Flags
MFA_ENABLED=true
ENCRYPTION_ENABLED=true
BACKUP_ENABLED=true
MONITORING_ENABLED=true

