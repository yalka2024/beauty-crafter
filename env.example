# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/beauty_crafter"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key-here"

# OAuth Providers
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-stripe-webhook-secret"

# Supabase Configuration (Alternative to custom backend)
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# Email Configuration (SendGrid)
SENDGRID_API_KEY="your-sendgrid-api-key"
SENDGRID_FROM_EMAIL="noreply@beautycrafter.com"

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# Google Maps API
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# OpenAI Configuration (for AI features)
OPENAI_SECRET_KEY="your-openai-api-key"

# File Upload (AWS S3 or similar)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="beauty-crafter-uploads"

# Redis Configuration (for caching and sessions)
REDIS_URL="redis://localhost:6379"

# Monitoring and Analytics
SENTRY_DSN="your-sentry-dsn"
GOOGLE_ANALYTICS_ID="your-ga-id"
GOOGLE_TAG_MANAGER_ID="your-gtm-id"

# App Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="Beauty Crafter"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_FEATURES="true"
NEXT_PUBLIC_ENABLE_AR_FEATURES="false"
NEXT_PUBLIC_ENABLE_VOICE_BOOKING="false"

# Security
CSRF_SECRET="your-csrf-secret-key"
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="900000"

# Compliance and Verification
NEXT_PUBLIC_ENABLE_LICENSE_VERIFICATION="true"
NEXT_PUBLIC_ENABLE_BACKGROUND_CHECKS="true"
NEXT_PUBLIC_ENABLE_INSURANCE_VERIFICATION="true"

# Payment Configuration
NEXT_PUBLIC_PLATFORM_COMMISSION_RATE="0.15"
NEXT_PUBLIC_STRIPE_PROCESSING_FEE_RATE="0.029"
NEXT_PUBLIC_STRIPE_PROCESSING_FEE_AMOUNT="0.30"

# Notification Configuration
NEXT_PUBLIC_ENABLE_EMAIL_NOTIFICATIONS="true"
NEXT_PUBLIC_ENABLE_SMS_NOTIFICATIONS="true"
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS="false"

# Development Configuration
NODE_ENV="development"
NEXT_PUBLIC_DEBUG_MODE="true" 