# Vercel Environment Variables Template
# Copy these to your Vercel project settings

# Application
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://beauty-crafter.vercel.app

# Database (use Vercel Postgres or external)
DATABASE_URL=postgresql://username:password@host:port/database

# Authentication
NEXTAUTH_URL=https://beauty-crafter.vercel.app
NEXTAUTH_SECRET=your_secure_secret_here

# API Configuration
API_BASE_URL=https://beauty-crafter.vercel.app/api
NEXT_PUBLIC_API_URL=https://beauty-crafter.vercel.app/api

# Performance
ENABLE_PERFORMANCE_MONITORING=true
CACHE_TTL=300

# Security
CORS_ORIGIN=https://beauty-crafter.vercel.app
ALLOWED_ORIGINS=https://beauty-crafter.vercel.app

# Features
ENABLE_CACHING=true
ENABLE_COMPRESSION=true
ENABLE_SECURITY_HEADERS=true
